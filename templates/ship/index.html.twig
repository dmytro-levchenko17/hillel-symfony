{% extends 'base.html.twig' %}

{% block title %}Ships!{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Космическая битва</h1>
        </div>
        <table class="table table-hover">
            <caption><i class="fa fa-rocket"></i> Корабли готовы к следующей Миссии</caption>
            <thead>
                <tr>
                    <th>Корабль</th>
                    <th>Атака</th>
                    <th>Сила Джедая</th>
                    <th>Прочность</th>
                </tr>
            </thead>
            <tbody>
                {% for ship in ships %}
                    <tr>
                        <td>{{ ship.name }}</td>
                        <td>{{ ship.weapon_power }}</td>
                        <td>{{ ship.jedi_factor }}</td>
                        <td>{{ ship.strength }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}